# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/postman_mvp
MONGODB_DB_NAME=postman_mvp

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_32_chars_minimum
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_change_this_in_production_40_chars_minimum
JWT_EXPIRE_TIME=24h
JWT_REFRESH_EXPIRE_TIME=7d

# API Key Configuration
API_KEY_SECRET=your_super_secret_api_key_salt_change_this_in_production_24_chars_minimum

# Admin Configuration
ADMIN_EMAIL=admin@postman-mvp.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Environment
NODE_ENV=development

# Server Configuration
PORT=9000
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME_MINUTES=30

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production_36_chars_minimum

# Database Indexes (for optimization)
CREATE_DB_INDEXES=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Email Configuration (for future features)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9001